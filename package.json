{
  "name": "node-red-contrib-eufy-security",
  "version": "1.0.0",
  "description": "Node-RED nodes for Eufy Security devices",
  "keywords": [
    "node-red",
    "eufy",
    "security",
    "camera",
    "doorbell",
    "smart home",
    "iot"
  ],
  "author": "Rasmus",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bropat/eufy-security-client"
  },
  "main": "dist/nodes/index.js",
  "types": "dist/nodes/index.d.ts",
  "files": [
    "dist",
    "docs",
    "README.md"
  ],
  "scripts": {
    "build": "bun run build:ts && bun run build:lib && bun run build:html",
    "build:ts": "bunx tsc",
    "build:lib": "mkdir -p dist/lib && cp -r src/lib/*.ts dist/lib/ 2>/dev/null || true",
    "build:html": "mkdir -p dist/nodes && cp src/nodes/*.html dist/nodes/",
    "dev": "bun run build && bun run --watch build",
    "clean": "rm -rf dist",
    "typecheck": "bunx tsc --noEmit",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "node-red": {
    "version": ">=2.0.0",
    "nodes": {
      "eufy-config": "dist/nodes/eufy-config.js",
      "eufy-device": "dist/nodes/eufy-device.js",
      "eufy-event": "dist/nodes/eufy-event.js"
    }
  },
  "dependencies": {
    "eufy-security-client": "^3.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@biomejs/biome": "^2.3.8",
    "@types/node-red": "^1.3.5",
    "bun-types": "^1.3.3",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
